# Основные настройки
APP_NAME=CRM Backend
APP_VERSION=1.0.0
DEBUG=True
SECRET_KEY=your-secret-key-here-change-this-in-production

# База данных (порт изменен на 5433)
DATABASE_URL=postgresql://crm_user:crm_password@localhost:5433/crm_db
DATABASE_URL_ASYNC=postgresql+asyncpg://crm_user:crm_password@localhost:5433/crm_db

# Redis
REDIS_URL=redis://localhost:6379/0

# Celery
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# JWT настройки
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
ALGORITHM=HS256

# Файловое хранилище
STORAGE_TYPE=local
S3_BUCKET_NAME=crm-files
S3_ACCESS_KEY=your-access-key
S3_SECRET_KEY=your-secret-key
S3_ENDPOINT_URL=https://s3.amazonaws.com

# Email настройки
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_TLS=True

# Sentry (опционально)
SENTRY_DSN=your-sentry-dsn

# CORS настройки
CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173"]

# Telegram бот
TELEGRAM_BOT_TOKEN=your-telegram-bot-token-here
API_BASE_URL=http://localhost:8000/api/v1